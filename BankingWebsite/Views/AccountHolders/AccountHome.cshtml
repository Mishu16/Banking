@model IEnumerable<BankingWebsite.Models.Card>

@{
    ViewBag.Title = "AccountHome";
}

    <div class="row">
        <div class="col-lg-2">   </div>
        <div class="generalblock col-lg-8">
            <h2>Welcome @Session["fname"]</h2>
            <p>
                Below is your account summary.
            </p>
        </div>
        <div class="col-lg-2">   </div>
    </div>
    <div class="row">
        <div class="col-lg-2">   </div>
        <div class="generalblock col-lg-8">
            <h3>Personal accounts</h3>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.accountName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.accountNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.sortcode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cardNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.balance)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.accountName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.accountNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sortcode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cardNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.balance)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.cardID })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="col-lg-2">   </div>
    </div>

