
@{
    ViewBag.Title = "PreTransactionHistory";
}

<h3>Select account</h3>
@model IEnumerable<BankingWebsite.Models.Card>

@{
    ViewBag.Title = "AccountHome";
}

<div class="row">
    <div class="col-lg-2">
        <div id="wrapper">

            <!-- Sidebar -->
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        <a href=@Url.Action("AccountHome/"+ Session["ahID"],"AccountHolders1")>
                            Overview
                        </a>
                    </li>
                    <li>
                        <a href=@Url.Action("PreTransactionHistory/" + Session["ahID"] ,"Transactions")>Statements</a>
                    </li>
                    <li>
                        <a href=@Url.Action("Create","Transactions")>Transfer money</a>
                    </li>
                    <li>
                        <a href="#">Make payment</a>
                    </li>


                </ul>
            </div>
        </div>
        <!-- /#wrapper -->
        <!-- Menu Toggle Script -->
        <script>
$("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });</script>
    </div>
    <div class="col-lg-8">
        <div class="generalblock row">
            <h2>Transaction History</h2>
            <p>
                Select account
            </p>
        </div>

        <div class="generalblock row">
            <h3>Personal accounts</h3>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.accountName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.accountNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.sortcode)
                    </th>
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.accountName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.accountNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sortcode)
                        </td>
                        <td>
                            @Html.ActionLink("Transaction history", "TransactionHistory", new { id = item.cardID })
                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>
    <div class="adbanner col-lg-2">
        <div class="adbanner">
            <p> Insert ad </p>
        </div>
    </div>

</div>



